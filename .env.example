# ===========================================
# DDL - Real Estate Platform Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/ddl

# ===========================================
# AI / OpenAI Configuration (REQUIRED)
# ===========================================
# These are required for PDF data extraction and content generation
# Get your API key from: https://platform.openai.com/api-keys
AI_INTEGRATIONS_OPENAI_API_KEY=sk-your-openai-api-key-here
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# ===========================================
# Object Storage (Google Cloud Storage)
# ===========================================
# Bucket ID for storing uploaded PDFs and extracted images
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-gcs-bucket-name

# Directory paths for object storage
PRIVATE_OBJECT_DIR=private
PUBLIC_OBJECT_SEARCH_PATHS=public,uploads

# ===========================================
# Maps (Optional)
# ===========================================
# Get your token from: https://www.mapbox.com/
MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token-here

# ===========================================
# Authentication & Security (REQUIRED in production)
# ===========================================
# Secret for signing session cookies. MUST be set in production.
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-secure-random-string-here

# Default admin password. MUST be set in production.
ADMIN_PASSWORD=change-this-to-a-strong-password

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=5000
